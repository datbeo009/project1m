    <script>



        function LoadArticle() {
            $.ajax({
                url: "/ClientArticle/Gets",
                type: "Get",
                success: function (res) {
                    res = JSON.parse(res);
                    if (res) {
                        res.forEach((e,i) => {
                            var title = e.Title;
                            var image = e.ListImage ? e.ListImage.split(",")[0] : "/assetclient/assets/img/noimage.jpg";
                            if (i <= 3) {
                                var oneContent = "<article class='blog_item' > <div class='blog_item_img'><img class='rounded-0' src='" + image + "' style='max-width:100%;max-height:420px'><a href='#' class='blog_item_date'> <h3>15</h3> <p>Jan</p> </a> </div> <div class='blog_details'> <a class='d-inline-block' href='/ClientArticleDetail/Index/" + e.ID + "'><h2>" + title + "</h2> </a> </div></article>";
                                $("#atContent").append(oneContent);
                            } else if(i<=7) {
                                $('#otherBlg').append('<div class="media post_item"><img src="' + image +'" style="max-width:80px;max-height:80px"><div class="media-body"><a href="/ClientArticleDetail/Index/' + e.ID + '"><h3>'+title+'</h3></a></div></div>')
                            }
                            
                        })
                    }
                }
            })
        }
        LoadArticle();



    </script>
