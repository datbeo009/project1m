<script>

    var id = @ViewBag.TitleId;
    function ArticleLoad() {
        $.ajax({
            url: "/ClientArticleDetail/LoadArticle",
            data: { id: id },
            type: "Get",
            success: function (res) {
                res = JSON.parse(res)
                if (res) {
                    var image = res.ListImage ? res.ListImage.split(",")[0] : "/assetclient/assets/img/noimage.jpg"
                    var Title = res.Title;
                    var Content = res.Content;
                    $('#IdBlog').append("<img class='img-fluid' src='" + image + "' alt=''>")
                    $('#tBlog').append("<div<h2>" + Title + "</h2><p>" + Content +"</p></div>")
                }
            }
        })
    }
    function getOtherPost() {
        $.ajax({
            url: '/ClientArticle/Gets',
            type: "Get",
            success: function (res) {
                res = JSON.parse(res);
                var pos = res.indexOf(res.find(c => c.ID == id));
                if (pos == 0) {
                    $('#prvDiv').css({ 'visibility': 'hidden' });
                    $('.nxtPostLink').attr('href', '/ClientArticleDetail/Index/' + res[pos + 1].ID);
                    $('#nxtPostImg').attr('src', res[pos + 1].ListImage.split(',')[0]);
                    $('#nxtPostTitle').html(res[pos + 1].Title);
                } else if (pos == (res.length - 1)) {
                    $('#nxtDiv').css({ 'visibility': 'hidden' });
                    $('.prvPostLink').attr('href', '/ClientArticleDetail/Index/' + res[pos - 1].ID);
                    $('#prvPostImg').attr('src', res[pos - 1].ListImage.split(',')[0]);
                    $('#prvPostTitle').html(res[pos - 1].Title);
                } else {
                    $('.prvPostLink').attr('href', '/ClientArticleDetail/Index/' + res[pos - 1].ID);
                    $('#prvPostImg').attr('src', res[pos - 1].ListImage.split(',')[0]);
                    $('#prvPostTitle').html(res[pos - 1].Title);
                    $('.nxtPostLink').attr('href', '/ClientArticleDetail/Index/' + res[pos + 1].ID);
                    $('#nxtPostImg').attr('src', res[pos + 1].ListImage.split(',')[0]);
                    $('#nxtPostTitle').html(res[pos + 1].Title);
                }
                
                var lsPost = res.filter(c => c.ID != id);
                lsPost.forEach((e, i) => {
                    if (i >= 4) return;
                    $('#otherPost').append('<div class="media post_item"><img src="' + e.ListImage.split(',')[0] + '" style="max-width:80px;max-height:80px"><div class="media-body"><a href="/ClientArticleDetail/Index/' + e.ID + '"><h3>'+e.Title+'</h3></a></div></div>')
                })
            }
        })
    }

    getOtherPost();
    ArticleLoad();
</script>
